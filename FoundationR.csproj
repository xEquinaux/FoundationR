<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
	<UseWindowsForms>true</UseWindowsForms>
	<LangVersion>10</LangVersion>
	<StartupObject>FoundationR.App</StartupObject>
	<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="REW_Converter\**" />
    <EmbeddedResource Remove="REW_Converter\**" />
    <None Remove="REW_Converter\**" />
    <Page Remove="REW_Converter\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="ArrayToBitmap.cpp" />
    <None Remove="ByteArraySample.cpp" />
    <None Remove="Direct2D.cpp" />
    <None Remove="Direct2D.h" />
    <None Remove="Direct2D_Render.dll" />
    <None Remove="FoundationR.zip" />
    <None Remove="FoundationR_1.0.zip" />
    <None Remove="OpenGL.cpp" />
    <None Remove="REW_Converter.zip" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Direct2D_Render.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Update="TestBed.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Textures\background.rew">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Textures\bluepane.rew">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Textures\cans.rew">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
